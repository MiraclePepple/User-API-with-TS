{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES6",                          /* Set the JavaScript version output */
    "module": "commonjs",                     /* Node.js module system */
    "rootDir": "./src",                       /* Folder containing your TypeScript files */
    "outDir": "./dist",                       /* Folder for compiled JavaScript files */
    "esModuleInterop": true,                  /* Allow default imports (like express) */
    "forceConsistentCasingInFileNames": true, /* Disallow inconsistently-cased file names */
    "strict": true,                           /* Enable all strict type-checking options */
    "skipLibCheck": true                      /* Skip type checking of declaration files */
  },
  "include": ["src"],                         /* Compile everything inside src folder */
  "exclude": ["node_modules"]                 /* Don't compile dependencies */
}
